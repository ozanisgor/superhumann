<div class="banner">
  <div class="banner-content">
    <h1> Bookings </h1>
    <p> Welcome User, </p>
    <p>Your Bookings!</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1569003339405-ea396a5a8a90?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=700&q=60');">
          <div class="card-description">
            <h2><%= booking.start_time %></h2>
            <h2><%= booking.end_time %></h2>
            <h2><%= booking.total_price %></h2>

          </div>
        </div>
        <p> <%= link_to 'More info', booking %></p>
      </div>
    <% end %>
  </div>
</div>
