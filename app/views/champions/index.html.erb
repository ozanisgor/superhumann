<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1501630834273-4b5604d2ee31?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="container text-center">
    <h1>Find Your Super Hero</h1>
    <p>Take a look inside</p>
    <div class="cards-grid">
        <% @champions.each do |champion| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(champion.photo.key, :crop => :fill) %> ')">
            <%= link_to champion.name, champion %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<h2 class="text-center mt-5">Heroes are waiting for you below!</h2>
<div class="container" >
    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
