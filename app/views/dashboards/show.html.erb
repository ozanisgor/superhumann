<h1>Dashboard#show</h1>
<p>Find me in app/views/dashboard/show.html.erb</p>

<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.com/photos/qJDkJRTedNw');">
          <div class="card-description">
            <h2><%= booking.user %></h2>
            <h2><%= booking.start_time %></h2>
            <h2><%= booking.end_time %></h2>           
          </div>
        </div>
        <p> <%= link_to 'More info', booking %></p>
      </div>
    <% end %>
  </div>
</div>
